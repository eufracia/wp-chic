<section class="section section-page-header" style="background-image: url('{{acf.page_image.sizes.large}}'); background-size: cover;">
    <h1 class="page-title" style="color:{{acf.page_title_color}}">{{acf.page_title}}</h1>
    <p class="page-description" style="color:{{acf.page_description_color}}">{{acf.page_description}}</p>
</section>
{% for category in acf.menu_categories %}
    <section class="section-menu-category">
       <h1>{{category.menu_category_name}}</h1>
       <ul class="category-items">
           {% for item in category.menu_category_items %}
                <li class="category-item">
                    <div class="category-item-details">
                        <h5 class="category-item-name">{{item.item_name}}</h5>
                        <p class="category-item-description">{{item.item_description}}</p>
                    </div>
                    <div class="category-item-price">
                        {{item.item_price}}
                    </div>
                </li>
           {% endfor %}
       </ul>
    </section>
{% endfor %}
